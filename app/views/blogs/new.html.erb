<%= form_for @blog do |f| %>
  <% if @blog.errors.any? %>
    <ul>
      <% @blog.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

  <div class="field">
    <%= f.text_field :title, placeholder: "Title", class: "form-control" %>
  </div>
  <div class="field">
    <%= f.text_area :body, placeholder: "Body" %>
  </div>
  <%= f.submit "Create", class: "btn btn-primary" %>

<% end %>
